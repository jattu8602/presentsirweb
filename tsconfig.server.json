{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist/server",
    "noEmit": false,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "types": ["node", "express"]
  },
  "include": ["server/**/*", "shared/**/*", "server/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "client"]
}
