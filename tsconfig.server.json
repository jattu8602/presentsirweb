{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist/server",
    "target": "ES2020",
    "lib": ["ES2020"],
    "isolatedModules": false,
    "noEmit": false,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "jsx": "react-jsx"
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "client"]
}
